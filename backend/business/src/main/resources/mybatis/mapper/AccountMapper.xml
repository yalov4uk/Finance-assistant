<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.perfect.team.business.mapper.AccountMapper">

    <resultMap id="accountResultMap" type="Account">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="balance" column="balance"/>
        <result property="initialDate" column="initial_date"/>
        <result property="currency" column="currency"/>
        <association property="user" column="user_id" foreignColumn="id" columnPrefix="user_"
                     resultMap="com.perfect.team.business.mapper.UserMapper.userResultMap"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO account (icon, balance, initial_date, name, currency, user_id)
        VALUES (#{icon}, #{balance}, #{initialDate}, #{name}, #{currency}, #{user.id})
    </insert>

    <select id="select" resultMap="accountResultMap">
        SELECT
            a.id,
            a.name,
            a.initial_date,
            a.balance,
            a.user_id,
            a.currency
        FROM account a
        WHERE id = #{id}
    </select>

    <update id="update" useGeneratedKeys="true" keyProperty="id">
        UPDATE account
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="balance != null">balance = #{balance},</if>
            <if test="initialDate != null">initial_date = #{initialDate},</if>
            <if test="currency != null">currency = #{currency}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM account
        WHERE id = #{id}
    </delete>

    <select id="selectAll" resultMap="accountResultMap">
        SELECT
            a.id,
            a.name,
            a.initial_date,
            a.balance,
            a.user_id,
            a.currency
        FROM account a
    </select>

    <select id="selectWithUser" resultMap="accountResultMap">
        SELECT
            a.id,
            a.name,
            a.initial_date,
            a.balance,
            a.user_id,
            a.currency,
            u.name,
            u.email
        FROM account a
            LEFT JOIN user u ON a.user_id = u.id
        WHERE a.id = #{id}
    </select>

    <select id="selectAllByUserId" resultMap="accountResultMap">
        SELECT
            a.id,
            a.name,
            a.initial_date,
            a.balance,
            a.user_id,
            a.currency
        FROM account a
        WHERE user_id = #{userId}
    </select>
</mapper>
