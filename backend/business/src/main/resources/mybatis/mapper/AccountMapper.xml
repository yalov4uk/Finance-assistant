<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.perfect.team.business.mapper.AccountMapper">

    <resultMap id="accountResultMap" type="Account">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="initialBalance" column="initial_balance"/>
        <result property="initialDate" column="initial_date"/>
    </resultMap>

    <resultMap id="accountWithUserResultMap" type="Account">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="initialBalance" column="initial_balance"/>
        <result property="initialDate" column="initial_date"/>
        <result property="user.id" column="user_id"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO account (icon, initial_balance, initial_date, name, user_id)
        VALUES (#{icon}, #{initialBalance}, #{initialDate}, #{name}, #{user.id})
    </insert>

    <select id="select" resultMap="accountWithUserResultMap">
        SELECT *
        FROM account
        WHERE id = #{id}
    </select>

    <update id="update" useGeneratedKeys="true" keyProperty="id">
        UPDATE account
        <set>
            <if test="bean.name != null">name = #{bean.name},</if>
            <if test="bean.icon != null">icon = #{bean.icon},</if>
            <if test="bean.initialBalance != null">initial_balance = #{bean.initialBalance},</if>
            <if test="bean.initialDate != null">initial_date = #{bean.initialDate},</if>
            <if test="bean.user != null and bean.user.id != null">user_id = #{bean.user.id}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM account
        WHERE id = #{id}
    </delete>

    <select id="selectAll" resultMap="accountWithUserResultMap">
        SELECT *
        FROM account
    </select>

    <select id="selectWithUser" resultMap="accountWithUserResultMap">
        SELECT *
        FROM account
            LEFT JOIN user ON account.user_id = user.id
        WHERE account.id = #{id}
    </select>

    <select id="selectAllByUserId" resultMap="accountWithUserResultMap">
        SELECT *
        FROM account
        WHERE user_id = #{userId}
    </select>
</mapper>
