<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.perfect.team.business.mapper.TransactionMapper">

    <resultMap id="transactionResultMap" type="Transaction">
        <id property="id" column="id"/>
        <result property="value" column="value"/>
        <result property="note" column="note"/>
        <result property="date" column="date"/>
    </resultMap>

    <resultMap id="transactionFullResultMap" type="Transaction">
        <id property="id" column="id"/>
        <result property="value" column="value"/>
        <result property="note" column="note"/>
        <result property="date" column="date"/>
        <result property="account.id" column="account_id"/>
        <result property="category.id" column="category_id"/>
        <result property="user.id" column="user_id"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO transaction (date, note, value, account_id, category_id, user_id)
        VALUES (#{date}, #{note}, #{value}, #{account.id}, #{category.id}, #{user.id})
    </insert>

    <select id="select" resultMap="transactionFullResultMap">
        SELECT *
        FROM transaction
        WHERE id = #{id}
    </select>

    <update id="update" useGeneratedKeys="true" keyProperty="id">
        UPDATE transaction
        <set>
            <if test="bean.value != null">value = #{bean.value},</if>
            <if test="bean.note != null">note = #{bean.note},</if>
            <if test="bean.date != null">date = #{bean.date},</if>
            <if test="bean.user != null and bean.user.id != null">user_id = #{bean.user.id},</if>
            <if test="bean.category != null and bean.category.id != null">category_id = #{bean.category.id},</if>
            <if test="bean.account != null and bean.account.id != null">account_id = #{bean.account.id}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM transaction
        WHERE id = #{id}
    </delete>

    <select id="selectAll" resultMap="transactionFullResultMap">
        SELECT *
        FROM transaction
    </select>

    <select id="selectWithFull" resultMap="transactionFullResultMap">
        SELECT *
        FROM transaction
            LEFT JOIN account ON transaction.account_id = account.id
            LEFT JOIN category ON transaction.category_id = category.id
            LEFT JOIN user ON transaction.user_id = user.id
        WHERE account.id = #{id}
    </select>

    <select id="selectAllByUserId" resultMap="transactionFullResultMap">
        SELECT *
        FROM transaction
        WHERE user_id = #{userId}
    </select>
</mapper>
