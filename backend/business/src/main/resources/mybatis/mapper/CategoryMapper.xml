<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.perfect.team.business.mapper.CategoryMapper">

    <resultMap id="categoryResultMap" type="Category">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
    </resultMap>

    <resultMap id="categoryWithUserResultMap" type="Category">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="categoryType.id" column="category_type_id"/>
        <result property="user.id" column="user_id"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category (category_type_id, icon, name, user_id)
        VALUES (#{categoryType.id}, #{icon}, #{name}, #{user.id})
    </insert>

    <select id="select" resultMap="categoryWithUserResultMap">
        SELECT *
        FROM category
        WHERE id = #{id}
    </select>

    <update id="update" useGeneratedKeys="true" keyProperty="id">
        UPDATE category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="icon != null">icon = #{icon}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM category
        WHERE id = #{id}
    </delete>

    <select id="selectAll" resultMap="categoryWithUserResultMap">
        SELECT *
        FROM category
    </select>

    <select id="selectWithUser" resultMap="categoryWithUserResultMap">
        SELECT *
        FROM category
            LEFT JOIN user ON category.user_id = user.id
        WHERE account.id = #{id}
    </select>

    <select id="selectAllByUserId" resultMap="categoryWithUserResultMap">
        SELECT *
        FROM category
        WHERE user_id = #{userId}
    </select>
</mapper>
