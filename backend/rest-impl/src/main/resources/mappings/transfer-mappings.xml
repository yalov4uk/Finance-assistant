<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://dozer.sourceforge.net"
  xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

  <mapping>
    <class-a>com.perfect.team.api.request.TransferCreateRequest</class-a>
    <class-b>com.perfect.team.common.model.Transfer</class-b>
    <field>
      <a>transferDto</a>
      <b>this</b>
    </field>
  </mapping>

  <mapping>
    <class-a>com.perfect.team.api.dto.TransferCreateDto</class-a>
    <class-b>com.perfect.team.common.model.Transfer</class-b>
    <field custom-converter="com.perfect.team.rest.impl.converter.LongToDateConverter">
      <a>date</a>
      <b>date</b>
    </field>
    <field>
      <a>fromAccountId</a>
      <b>fromAccount.id</b>
    </field>
    <field>
      <a>toAccountId</a>
      <b>toAccount.id</b>
    </field>
    <field>
      <a>userId</a>
      <b>user.id</b>
    </field>
  </mapping>

  <mapping>
    <class-a>com.perfect.team.common.model.Transfer</class-a>
    <class-b>com.perfect.team.api.response.TransferResponse</class-b>
    <field>
      <a>this</a>
      <b>transferDto</b>
    </field>
  </mapping>

  <mapping>
    <class-a>com.perfect.team.common.model.Transfer</class-a>
    <class-b>com.perfect.team.api.dto.TransferReadDto</class-b>
    <field custom-converter="com.perfect.team.rest.impl.converter.LongToDateConverter">
      <a>date</a>
      <b>date</b>
    </field>
    <field>
      <a>fromAccount.id</a>
      <b>fromAccountId</b>
    </field>
    <field>
      <a>toAccount.id</a>
      <b>toAccountId</b>
    </field>
    <field>
      <a>user.id</a>
      <b>userId</b>
    </field>
  </mapping>

  <mapping>
    <class-a>com.perfect.team.api.request.TransferUpdateRequest</class-a>
    <class-b>com.perfect.team.common.model.Transfer</class-b>
    <field>
      <a>TransferDto</a>
      <b>this</b>
    </field>
  </mapping>

  <mapping>
    <class-a>com.perfect.team.api.dto.TransferUpdateDto</class-a>
    <class-b>com.perfect.team.common.model.Transfer</class-b>
    <field custom-converter="com.perfect.team.rest.impl.converter.LongToDateConverter">
      <a>date</a>
      <b>date</b>
    </field>
    <field>
      <a>fromAccountId</a>
      <b>fromAccount.id</b>
    </field>
    <field>
      <a>toAccountId</a>
      <b>toAccount.id</b>
    </field>
  </mapping>

  <mapping>
    <class-a>com.perfect.team.rest.impl.model.CollectionWrapper</class-a>
    <class-b>com.perfect.team.api.response.TransfersResponse</class-b>
    <field>
      <a>collection</a>
      <b>transferDtos</b>
    </field>
  </mapping>
</mappings>
