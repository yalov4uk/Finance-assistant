<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://dozer.sourceforge.net"
  xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

  <configuration>
    <wildcard>true</wildcard>
    <custom-converters>
      <converter type="com.perfect.team.rest.impl.converter.CategoryTypeToStringConverter">
        <class-a>java.lang.String</class-a>
        <class-b>com.perfect.team.business.model.Category.Type</class-b>
      </converter>
      <converter type="com.perfect.team.rest.impl.converter.AccountCurrencyToStringConverter">
        <class-a>java.lang.String</class-a>
        <class-b>com.perfect.team.business.model.Category.Type</class-b>
      </converter>
    </custom-converters>
  </configuration>
</mappings>
